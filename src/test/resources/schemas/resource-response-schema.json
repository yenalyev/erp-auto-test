{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resource Response",
  "type": "object",
  "required": ["id", "name", "unit"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "unit": {
      "$ref": "measurement-unit-schema.json"
    }
  },
  "additionalProperties": false
}