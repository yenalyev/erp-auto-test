{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TechnologicalMapRequest",
  "type": "object",
  "required": ["name", "input", "output"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0
    },
    "name": { "type": "string", "minLength": 1 },
    "input": {
      "type": "array",
      "items": { "$ref": "resource-usage-request-schema.json" }
    },
    "output": {
      "type": "array",
      "items": { "$ref": "resource-usage-request-schema.json" }
    },
    "alternatives": {
      "type": "array",
      "items": { "$ref": "alternative-group-request-schema.json" }
    }
  },
  "additionalProperties": false
}