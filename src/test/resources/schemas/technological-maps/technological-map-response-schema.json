{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Technological Map Response",
  "type": "object",
  "required": [
    "id",
    "name",
    "version",
    "groupId",
    "isActive",
    "createdAt",
    "input",
    "output",
    "alternatives"
  ],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "groupId": {
      "type": "string",
      "format": "uuid",
      "description": "Унікальний ідентифікатор групи техкарт"
    },
    "isActive": {
      "type": "boolean"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 формат дати та часу (Instant)"
    },
    "input": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "resource-usage-response-schema.json"
      }
    },
    "output": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "resource-usage-response-schema.json"
      }
    },
    "alternatives": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "alternative-group-response-schema.json"
      }
    }
  },
  "additionalProperties": false
}